{
  "manifest_version": 3,
  "name": "ارسال فاکتور به نرم‌افزار آریا",
  "description": "استخراج فاکتور از سایت تیتک و ثبت در نرم‌افزار آریا با مدال تعاملی و انتخاب کالاها",
   "icons": {
          "16": "assets/icon/icon.png",
          "48": "assets/icon/icon.png",
          "128": "assets/icon/icon.png"
      },
  "version": "1.0.0",
  "permissions": [
    "scripting",
    "storage"
  ]
  ,
  
  "action": {
    "default_title": "افزونه تیتک آریا",
        "default_icon": {
          "16": "assets/icon/icon16.png",
          "24": "assets/icon/icon24.png",
          "32": "assets/icon/icon32.png"
        }
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://newstatisticsreports.ttac.ir/*"],
      "css": ["style.css"],
      "js": ["dist/bundle.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/css/bootstrap.min.css",
        "assets/js/bootstrap.bundle.min.js",
        "assets/config.txt"
      ],
      "matches": ["https://newstatisticsreports.ttac.ir/*"]
    }
  ]
}
